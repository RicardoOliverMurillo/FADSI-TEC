<% include partials/header%>

<div class="row">
        <!--FORM-->
    <div class="col-md-5 mx-auto">
        <h4>Add product</h4>
        <div class="card">
            <div class="card-body">
                <form action="/addProductDelivery" method="GET">
                    <div class="form-group">
                        <input type="text" name="idProduct" placeholder="ID product" class="form-control" value="<%= productInfo[0].idProduct%>">
                    </div>
                    <div class="form-group">
                        <input type="number" name="qProduct" placeholder="Quantity" class="form-control">
                    </div>
                    <p>Special instructions.
                    </p>    
                    <div class="form-group">
                        <input type="text" name="note" placeholder="Leave a note for the kitchen!" class="form-control">
                    </div>
                    
                    <div>
                        <button type="submit" class="btn btn-success btn-block">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<% include partials/footer%>