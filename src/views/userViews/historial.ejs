<% include partials/header%>

<div class="container col-md-12">
        <div class="row">
            <div class="col-md-7 mx-auto tableContainer">
                <h4>Products</h4>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID delivery</th>    
                            <th>Quantity of products</th>
                            <th>Date</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i < delivery.length; i++){ %>
                             <tr>
                                <td><%= delivery[i]._id%></td>
                                <td><%= delivery[i].product[0].qProduct%></td>
                                <td><%= delivery[i].date%></td>
                                <td><%= delivery[i].total%></td>
                             </tr>
                            <%}%>    
                    </tbody>
                </table>
            </div>
        </div>
    </div>


<% include partials/footer%>