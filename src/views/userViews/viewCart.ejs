<% include partials/header%>

<div class="container col-md-12">
        <div class="row">
            <div class="col-md-7 mx-auto">
                <h4>Cart</h4>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID product</th> 
                            <th>Name</th>    
                            <th>Quantity</th>
                            <th>Note</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i < pedido.length; i++){ %>
                             <tr>
                                <td><%= pedido[i].idProduct%></td>
                                <td><%= pedido[i].name%></td>
                                <td><%= pedido[i].qProduct%></td>
                                <td><%= pedido[i].note%></td>
                                <td><%= pedido[i].price%></td>
                             </tr>
                            <%}%>  
                    </tbody>
                </table>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Total</th> 
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><%= total%></td>
                        </tr> 
                    </tbody>
                </table>
                <div class="form-group">
                    <input type="text" name="observation" placeholder="Leave a note!" class="form-control">
                </div>
                <div>
                    <a href="/addDelivery" class="btn btn-success btn-block">Confirm</a>
                </div>
            </div>
        </div>
    </div>

<% include partials/footer%>